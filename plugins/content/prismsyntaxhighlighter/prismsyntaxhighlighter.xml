<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="plugin" group="content" method="upgrade">
	<name>PLG_CONTENT_PRISMSYNTAXHIGHLIGHTER</name>
	<author>Andre Hotzler</author>
	<creationDate>08.11.2021</creationDate>
	<copyright>Andre Hotzler</copyright>
	<license>MIT License</license>
	<authorEmail>prismsyntaxhighlighter@nspw.andrehotzler.de</authorEmail>
	<authorUrl>https://www.andrehotzler.de/en/projects/prism-prismjs-com-syntaxhighlighter-for-joomla.html</authorUrl>
	<version>1.2.0</version>
	<description><![CDATA[<br />PRISM Syntax Highlighter for Joomla! provides syntax highlighting for use with TinyMCE.<br />Further languages that are not directly selectable in TinyMCE can be used.<br /><br />For examples, see: <a target='_blank' href='https://www.andrehotzler.de/en/projects/prism-prismjs-com-syntaxhighlighter-for-joomla.html'>https://www.andrehotzler.de/en/projects/prism-prismjs-com-syntaxhighlighter-for-joomla.html</a><br /><br />If you use operation mode <strong>Autoloader</strong>, joomla has to be installed in the root of your webspace, not in a subfolder. <p><a target="_blank" href="https://www.andrehotzler.de/en/projects/prism-prismjs-com-syntaxhighlighter-for-joomla.html">Online-Documentation for PRISM Syntax Highlighter f√ºr Joomla!</a></p>]]></description>
	<updateservers>
		<server type="extension" name="Updates - PRISM (prismjs.com) SyntaxHighlighter for Joomla!" priority="1">https://downloads.andrehotzler.de/prismsyntaxhighlighter/prismsyntaxhighlighter_updates.xml</server>
	</updateservers>		
	<files>
		<filename plugin="prismsyntaxhighlighter">prismsyntaxhighlighter.php</filename>
		<filename>license.txt</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_content_prismsyntaxhighlighter.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_content_prismsyntaxhighlighter.sys.ini</language>
	</languages>
	<media folder="media" destination="plg_content_prismsyntaxhighlighter">
		<folder>css</folder>
		<folder>js</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="prismtype" type="list" label="PLG_CONTENT_PRISMSYNTAXHIGHLIGHTER_TYPE" description="PLG_CONTENT_PRISMSYNTAXHIGHLIGHTER_TYPE_DESC" default="tinymce" size="1">
					<option value="tinymce">PLG_CONTENT_PRISMSYNTAXHIGHLIGHTER_TINYMCE</option>
					<option value="autoloader">PLG_CONTENT_PRISMSYNTAXHIGHLIGHTER_AUTLOADER</option>
					<option value="all">PLG_CONTENT_PRISMSYNTAXHIGHLIGHTER_ALL</option>
				</field>
				<field name="prismstyle" type="list" label="PLG_CONTENT_PRISMSYNTAXHIGHLIGHTER_STYLE" description="PLG_CONTENT_PRISMSYNTAXHIGHLIGHTER_STYLE_DESC" default="default" size="1">
					<option value="default">default</option>
					<option value="dark">dark</option>
					<option value="coy">coy</option>
					<option value="funky">funky</option>
					<option value="okaidia">okaidia</option>
					<option value="solarizedlight">solarizedlight</option>
					<option value="tomorrownight">tomorrownight</option>
					<option value="twilight">twilight</option>
				</field>
			</fieldset>
		</fields>
	</config>	
</extension>
